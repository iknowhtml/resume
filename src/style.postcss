/* Basic CSS Reset */
* {
  padding: 0;
  margin: 0;
}

html {
  height: 100%;
  box-sizing: border-box;
  font-family: 'Raleway', sans-serif;

  @media only screen and (max-width: 640px) {
    font-size: 11px;
  }
}

*,
*:before,
*:after {
  box-sizing: inherit;
}

body {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f0f0f0;

  @media print {
    background-color: white;
  }
}

.container {
  display: flex;
  flex-direction: column;
  padding: 20mm 20mm;
  margin: auto;
  max-width: 800px;
  background-color: white;
  box-shadow: 0 0 6px #ccc;

  @media print {
    height: 100vh;
    box-shadow: none;
    padding: 0 15mm;
  }
  @media (max-width: 700px) {
    padding: 15mm 15mm;
  }
  @media (max-width: 500px) {
    padding: 10mm 10mm;
  }
}

header {
  border-top: 1px solid black;
  border-bottom: 1.5px solid black;
  text-align: center;
  font-weight: normal;

  /* Styling for headers not nested in the header section */
  font-size: 1em;
  padding-top: 0.1rem;
  padding-bottom: 0.075em;
}

main {
  padding: 0.625rem 0;

  & li {
    font-size: 0.75rem;
    line-height: 1.25em;
    list-style-type: none;
    position: relative;
    margin-top: 0.25em;
    margin-left: 1.5em;

    &:before {
      content: '\2022';
      font-size: 2em;
      position: absolute;
      left: -0.5em;
    }
  }
}

/* styles text inside of main */
h3 {
  font-size: 0.9rem;
  font-weight: normal;
}
time {
  font-size: 0.75rem;
}

span {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
#header {
  & header {
    text-transform: uppercase;
    font-weight: 500;
    font-size: 1.75rem;
    padding-top: 0.3rem;
    padding-bottom: 0.15rem;
  }
}

#info {
  text-align: center;
  font-size: 0.75rem;
  padding-top: 0.2rem;
  padding-bottom: 0.1rem;
}

#profile {
  & p {
    font-size: 0.75rem;
    line-height: 1.4em;
  }
}

#skills {
  & main {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-column-gap: 0.5rem;
    grid-row-gap: 0.1rem;
  }

  /* styles skill lists */
  & section h3 ~ span {
    display: block;
    line-height: 1rem;
    font-size: 0.75rem;
  }
}

#work-experience {
  & section {
    margin-bottom: 0.25rem;
  }
}
